<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>Rotten Potatoes!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %> 
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="login" class="container" width="100%">
      <div class="row bg-light border-bottom">
        <div class="col-2 offset-8">
          <%# get method is not working %>
          <%# <a class="btn btn-primary text-center" href="/auth/github">Sign In</a> %>
          <%= link_to "Sign In", '/auth/github', method: "post", class: 'btn btn-primary' unless @current_user%>
        </div>
        <div class="col-2">
          <a class="btn btn-danger  text-center" href="/session/destroy">Sign Out</a>
        </div>
      </div>
    </div>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg bg-primary text-white mb-3">
      <h1 class="title">Rotten Potatoes!</h1>
    </nav>


    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
