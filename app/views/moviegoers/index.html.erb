<p id="notice"><%= notice %></p>

<h1>Listing Moviegoers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moviegoers.each do |moviegoer| %>
      <tr>
        <td><%= moviegoer.name %></td>
        <td><%= moviegoer.uid %></td>
        <td><%= link_to 'Show', moviegoer %></td>
        <td><%= link_to 'Edit', edit_moviegoer_path(moviegoer) %></td>
        <td><%= link_to 'Destroy', moviegoer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

